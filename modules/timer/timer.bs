import type {float, integer} from "../../bs-utils"

code`
#include "freertos/FreeRTOS.h"
#include "freertos/task.h"
`



export const getTimeMs = ():float => {
   let result = -1.0;
   code`
   _result = (esp_timer_get_time() / 1000.0);
   `
   return result;
}

export const waitMs = (ms: integer): void => {
   code`
   vTaskDelay(_ms / portTICK_PERIOD_MS);
   `
}